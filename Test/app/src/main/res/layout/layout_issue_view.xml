<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/activity_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        tools:context="com.example.astex.test.TestActivity">

        <RelativeLayout
            android:id="@+id/relat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:text="Обращение 29.06.2016"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

                <LinearLayout
                    android:layout_marginTop="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/header"
                    android:orientation="vertical">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="#d4d4d4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"

                        android:text="Фотографии:" />

                    <LinearLayout
                        android:id="@+id/image_wrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </LinearLayout>

                    <TextView
                        android:id="@+id/size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:text="Размер: 20мм"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/colorModification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:text="Изменения в цвете: без изменений"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/surface"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:text="Тип поверхности: шероховатая"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/bleeding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:text="Наличие кровотечения: нет"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/lymph"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:text="Увеличенные лимфоузлы: нет"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/patientComment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Комментарий: нет"
                        android:textColor="@android:color/black" />

                    <View
                        android:id="@+id/splitter"
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:background="#d4d4d4" />

                    <TextView
                        android:id="@+id/answerDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="20dp"
                        android:paddingTop="15dp"
                        android:text="Дата ответа: 29.06.2015"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/drAnswer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="20dp"
                        android:paddingTop="15dp"
                        android:text="Ответ врача:"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/answerContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="10dp"
                        android:paddingStart="30dp"
                        android:paddingTop="5dp"
                        android:text="Пока жить будешь, не переживай. Скинь фотку через месяцок"
                        android:textColor="@android:color/black" />
                </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>