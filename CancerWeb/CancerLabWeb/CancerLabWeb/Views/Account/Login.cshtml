@model CancerLabWeb.Models.LoginModel

@{
    Layout = null;
    ViewBag.Title = "CancerLab - вход";
}

<!DOCTYPE html>
<html class="page page_type_login" lang="ru">
<head>
    <title>CancerLab – Вход</title>
    <meta charset="utf-8" />
    <meta name="author" content="Elena Musatova, Vladimir Milenko" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width" />

    <!-- Project's styles -->
    @Styles.Render("~/Content/css")

</head>

<body class="page__body">
    <section class="login">
        <header class="login__header">
            <h1 class="title">Cancer Lab</h1>
        </header>
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new {@class = "form form_action_login"}))
        {
            @Html.AntiForgeryToken()
            <label class="label"><input class="input" type="text" name="Email" placeholder="Логин" tabindex="1"></label>
            <label class="label"><input class="input" type="password" name="Password" placeholder="Пароль" tabindex="2"></label>
            <label class="label"><input class="checkbox" type="checkbox" name="RememberMe" checked tabindex="3">Запомнить меня</label>
            <button class="button" type="submit" tabindex="4">Войти</button>
        }
        <a class="link" href="#">Забыли пароль?</a>
    </section>
</body>

</html>
